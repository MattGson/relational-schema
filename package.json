{
    "name": "relational-schema",
    "version": "0.1.8",
    "description": "Generate a js schema for a relational database",
    "keywords": [
        "postgres",
        "mysql",
        "schema",
        "typescript",
        "javascript",
        "sql",
        "orm"
    ],
    "scripts": {
        "lint": "eslint ./src",
        "build": "tsc",
        "dependency-check": "dependency-check . --entry src/schema-generator/cli/entry.ts --missing --no-dev",
        "docker:start": "docker-compose up -d",
        "docker:stop": "docker-compose down",
        "test:pg": "DB=pg ts-node ./test/Setup/build-test-client.ts --transpile-only && DB=pg jest --runInBand",
        "test:mysql": "DB=mysql ts-node ./test/Setup/build-test-client.ts --transpile-only && DB=mysql jest --runInBand",
        "prepare": "npm run build",
        "create-version": "standard-version",
        "semantic-release": "semantic-release"
    },
    "bin": {
        "relations": "build/src/schema-generator/cli/entry.js"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/MattGson/relational-schema.git"
    },
    "bugs": {
        "url": "https://github.com/MattGson/relational-schema/issues"
    },
    "author": "Matt Goodson <matt.goodson.business@gmail.com>",
    "license": "MIT",
    "devDependencies": {
        "@semantic-release/changelog": "^5.0.1",
        "@semantic-release/git": "^9.0.0",
        "@types/faker": "^4.1.12",
        "@types/fs-extra": "^9.0.1",
        "@types/jest": "^26.0.7",
        "@types/lodash": "^4.14.157",
        "@types/url-parse": "^1.4.3",
        "@types/yargs": "^15.0.5",
        "@typescript-eslint/eslint-plugin": "^4.19.0",
        "@typescript-eslint/parser": "^4.19.0",
        "cz-conventional-changelog": "^3.3.0",
        "dependency-check": "^2.6.0",
        "eslint": "^7.22.0",
        "eslint-config-prettier": "^8.1.0",
        "faker": "^4.1.0",
        "jest": "^24.7.0",
        "jest-extended": "^0.11.5",
        "semantic-release": "^17.4.2",
        "ts-jest": "^24.2.0",
        "ts-node": "^3.0.4"
    },
    "dependencies": {
        "@types/pg": "^7.14.5",
        "fs-extra": "^9.0.1",
        "knex": "^0.21.2",
        "lodash": "^4.17.19",
        "pg": "^8.4.1",
        "prettier": "^2.2.1",
        "promise-mysql": "^4.1.3",
        "typescript": "^3.8.1",
        "winston": "^3.3.3",
        "yargs": "^15.4.1"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
