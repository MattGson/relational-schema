{
    "name": "relational-schema",
    "version": "0.6.0",
    "description": "Generate a js schema for a relational database",
    "keywords": [
        "postgres",
        "mysql",
        "schema",
        "typescript",
        "javascript",
        "sql",
        "orm"
    ],
    "scripts": {
        "lint": "eslint ./src",
        "build": "tsc",
        "dependency-check": "dependency-check . --entry src/schema-generator/cli/entry.ts --missing --no-dev",
        "docker:start": "docker-compose up -d",
        "docker:stop": "docker-compose down",
        "test:pg": "DB=pg tsnd --files --transpile-only -r tsconfig-paths/register ./test/helpers/introspect.ts && DB=pg jest --runInBand",
        "test:mysql": "DB=mysql tsnd --files --transpile-only -r tsconfig-paths/register ./test/helpers/introspect.ts && DB=mysql jest --runInBand",
        "test:introspect": "tsnd --files --transpile-only -r tsconfig-paths/register ./test/helpers/introspect.ts",
        "prepare": "npm run build",
        "semantic-release": "semantic-release",
        "typecheck": "tsc --p ./tsconfig.typecheck.json"
    },
    "main": "./build/src/index.js",
    "types": "./build/src/index.d.ts",
    "bin": {
        "relations": "build/src/cli/entry.js"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/MattGson/relational-schema.git"
    },
    "bugs": {
        "url": "https://github.com/MattGson/relational-schema/issues"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "author": "Matt Goodson <matt.goodson.business@gmail.com>",
    "license": "MIT",
    "devDependencies": {
        "@semantic-release/changelog": "^5.0.1",
        "@semantic-release/git": "^9.0.0",
        "@types/faker": "^4.1.12",
        "@types/fs-extra": "^9.0.1",
        "@types/jest": "^26.0.7",
        "@types/lodash": "^4.14.157",
        "@types/pg": "^7.14.5",
        "@types/pluralize": "0.0.29",
        "@types/url-parse": "^1.4.3",
        "@types/yargs": "^15.0.5",
        "@typescript-eslint/eslint-plugin": "^4.19.0",
        "@typescript-eslint/parser": "^4.19.0",
        "cz-conventional-changelog": "^3.3.0",
        "dependency-check": "^2.6.0",
        "eslint": "^7.22.0",
        "eslint-config-prettier": "^8.1.0",
        "faker": "^4.1.0",
        "jest": "^26.6.3",
        "jest-extended": "^0.11.5",
        "semantic-release": "^17.4.2",
        "ts-jest": "^24.2.0",
        "ts-node": "^9.1.1",
        "ts-node-dev": "^1.1.1",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.2.0"
    },
    "dependencies": {
        "chalk": "^4.1.1",
        "fs-extra": "^9.0.1",
        "knex": "^0.21.2",
        "lodash": "^4.17.19",
        "pg": "^8.4.1",
        "pluralize": "^8.0.0",
        "prettier": "^2.2.1",
        "promise-mysql": "^4.1.3",
        "yargs": "^17.0.1"
    }
}
